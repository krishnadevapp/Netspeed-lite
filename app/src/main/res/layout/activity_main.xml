<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A237E"
        app:elevation="0dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="Netspeed Lite"
            app:titleTextColor="@android:color/white"
            app:titleCentered="false"
            app:menu="@menu/menu_main" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/colorHeaderRow"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="14dp"
            android:paddingHorizontal="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="Date"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="13sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Mobile"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="13sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="WiFi"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="13sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Total"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="13sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_usage_row" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="?android:attr/colorBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="Last 7 Days"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:paddingVertical="6dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/bg_rounded_value"
                            android:backgroundTint="@color/colorHeaderRow"/>

                        <TextView
                            android:id="@+id/tv7DaysMobile"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0 MB"
                            android:textSize="13sp"
                            android:paddingVertical="6dp"
                            android:paddingHorizontal="4dp"
                            android:background="@drawable/bg_rounded_value"
                            android:backgroundTint="@color/pillMobileBg"
                            android:textColor="@color/pillMobileText"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/tv7DaysWifi"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0 MB"
                            android:textSize="13sp"
                            android:paddingVertical="6dp"
                            android:paddingHorizontal="4dp"
                            android:background="@drawable/bg_rounded_value"
                            android:backgroundTint="@color/pillWifiBg"
                            android:textColor="@color/pillWifiText"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/tv7DaysTotal"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0 MB"
                            android:textSize="13sp"
                            android:paddingVertical="6dp"
                            android:paddingHorizontal="4dp"
                            android:background="@drawable/bg_rounded_value"
                            android:backgroundTint="@color/pillTotalBg"
                            android:textColor="@color/pillTotalText"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/colorDivider" android:layout_marginVertical="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="Last 30 Days"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:paddingVertical="6dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/bg_rounded_value"
                            android:backgroundTint="@color/colorHeaderRow"/>

                        <TextView
                            android:id="@+id/tv30DaysMobile"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0 MB"
                            android:textSize="13sp"
                            android:paddingVertical="6dp"
                            android:paddingHorizontal="4dp"
                            android:background="@drawable/bg_rounded_value"
                            android:backgroundTint="@color/pillMobileBg"
                            android:textColor="@color/pillMobileText"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/tv30DaysWifi"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0 MB"
                            android:textSize="13sp"
                            android:paddingVertical="6dp"
                            android:paddingHorizontal="4dp"
                            android:background="@drawable/bg_rounded_value"
                            android:backgroundTint="@color/pillWifiBg"
                            android:textColor="@color/pillWifiText"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/tv30DaysTotal"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="0 MB"
                            android:textSize="13sp"
                            android:paddingVertical="6dp"
                            android:paddingHorizontal="4dp"
                            android:background="@drawable/bg_rounded_value"
                            android:backgroundTint="@color/pillTotalBg"
                            android:textColor="@color/pillTotalText"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btnPermission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grant Usage Permission"
                android:visibility="gone"
                android:layout_margin="16dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@color/colorFooter">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="14dp"
            android:paddingHorizontal="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:text="Total"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTotalMobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0 MB"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTotalWifi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0 MB"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvGrandTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0 MB"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>