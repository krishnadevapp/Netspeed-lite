<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground"
    android:fitsSystemWindows="true"
    tools:ignore="Overdraw"
    tools:context=".SettingsActivity">

    <!-- TOOLBAR (Matching Home Screen Style) -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            app:title=""
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="16dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_back_white"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/back"
                    app:tint="@color/appBarText"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings"
                    android:textColor="@color/appBarText"
                    android:textSize="19sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01" />

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>
        
        <!-- Micro-Divider Line (System Style) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider" 
            android:alpha="0.8"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/settingsScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="40dp">

            <!-- Notification Settings -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_notifications"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchShowSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_internet_speed"
                android:textSize="15sp"
                android:textColor="?android:attr/textColorPrimary"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider"
                android:layout_marginVertical="8dp"
                android:alpha="0.5"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchShowUpDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_up_down_speed"
                android:textSize="15sp"
                android:textColor="?android:attr/textColorPrimary"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider"
                android:layout_marginVertical="8dp"
                android:alpha="0.5"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchShowWifiSignal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_wifi_strength"
                android:textSize="15sp"
                android:textColor="?android:attr/textColorPrimary"/>

            <!-- SECTION: Data Usage Alerts -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_data_alerts"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/colorStroke"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchDataAlert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/daily_data_limit_alert"
                        android:textSize="15sp"
                        android:textColor="?android:attr/textColorPrimary"/>

                    <LinearLayout
                        android:id="@+id/layoutDataLimitOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:layout_marginTop="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <!-- Value Input -->
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="@string/limit_hint"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                                android:layout_marginEnd="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etDataLimit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- Unit Dropdown -->
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="@string/unit_hint"
                                android:minWidth="90dp">

                                <AutoCompleteTextView
                                    android:id="@+id/tvUnitSelection"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:text="@string/unit_mb"
                                    tools:ignore="LabelFor" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvLimitError"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/data_limit_error"
                            android:textColor="@color/colorErrorText"
                            android:visibility="gone"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/data_limit_alert_info"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginTop="6dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECTION: Appearance -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_appearance"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/colorStroke"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <RadioGroup
                    android:id="@+id/radioGroupTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <RadioButton
                        android:id="@+id/radioThemeSystem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/theme_system"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:button="@null"
                        android:background="@drawable/selector_toggle_bg"
                        android:textColor="@color/selector_toggle_text"
                        android:layout_marginEnd="4dp"/>

                    <RadioButton
                        android:id="@+id/radioThemeLight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/theme_light"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:button="@null"
                        android:background="@drawable/selector_toggle_bg"
                        android:textColor="@color/selector_toggle_text"
                        android:layout_marginEnd="4dp"/>

                    <RadioButton
                        android:id="@+id/radioThemeDark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/theme_dark"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:button="@null"
                        android:background="@drawable/selector_toggle_bg"
                        android:textColor="@color/selector_toggle_text"/>

                </RadioGroup>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECTION: Permissions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_permissions"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"/>

            <!-- Usage Access Permission Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutUsageAccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/colorStroke"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:clickable="true"
                android:focusable="true"
                style="?attr/materialCardViewElevatedStyle"
                app:rippleColor="?attr/colorControlHighlight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <!-- Icon Container -->
                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_circle_light_accent"
                        android:layout_marginEnd="14dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_security"
                            app:tint="@color/colorAccent"
                            android:contentDescription="@string/usage_access_title"/>
                    </FrameLayout>

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/usage_access_title"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="?android:attr/textColorPrimary"/>

                        <TextView
                            android:id="@+id/tvUsageAccessDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/usage_access_desc"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginTop="3dp"
                            android:lineSpacingMultiplier="1.2"/>
                    </LinearLayout>

                    <!-- Status Badge -->
                    <TextView
                        android:id="@+id/tvUsageAccessStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_not_granted"
                        android:textSize="11sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:background="@drawable/bg_status_badge_error"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:layout_marginEnd="8dp"/>

                    <!-- Chevron -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="?android:attr/textColorSecondary"
                        android:contentDescription="@string/chevron_icon"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Battery Optimization Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutBatteryOptimization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/colorStroke"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:clickable="true"
                android:focusable="true"
                style="?attr/materialCardViewElevatedStyle"
                app:rippleColor="?attr/colorControlHighlight">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <!-- Icon Container -->
                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_circle_yellow_light"
                        android:layout_marginEnd="14dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_battery_alert"
                            app:tint="@color/colorStepCircleYellow"
                            android:contentDescription="@string/battery_opt_title"/>
                    </FrameLayout>

                    <!-- Text Content -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/battery_opt_title"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="?android:attr/textColorPrimary"/>

                        <TextView
                            android:id="@+id/tvBatteryOptDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/battery_opt_desc"
                            android:textSize="12sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginTop="3dp"
                            android:lineSpacingMultiplier="1.2"/>
                    </LinearLayout>

                    <!-- Status Badge -->
                    <TextView
                        android:id="@+id/tvBatteryOptStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_optimized"
                        android:textSize="11sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:background="@drawable/bg_status_badge_error"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:layout_marginEnd="8dp"/>

                    <!-- Chevron -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="?android:attr/textColorSecondary"
                        android:contentDescription="@string/chevron_icon"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Actions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_actions"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"/>

            <TextView
                android:id="@+id/btnStopExit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingVertical="14dp"
                android:paddingHorizontal="4dp"
                android:text="@string/stop_exit"
                android:textColor="@color/colorErrorText"
                android:textSize="15sp"/>

            <!-- SUPPORT & FEEDBACK -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/support_feedback"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"/>

            <LinearLayout
                android:id="@+id/btnRateUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="14dp"
                android:paddingHorizontal="4dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_star_rate"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="@string/star_icon"
                    app:tint="@color/colorStarTint"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rate_us"
                        android:textSize="15sp"
                        android:textColor="?android:attr/textColorPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rate_us_subtitle"
                        android:textSize="13sp"
                        android:textColor="?android:attr/textColorSecondary"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    android:contentDescription="@string/chevron_icon"
                    app:tint="?android:attr/textColorSecondary"/>

            </LinearLayout>

            <TextView
                android:id="@+id/btnPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:paddingVertical="14dp"
                android:paddingHorizontal="4dp"
                android:text="@string/privacy_policy"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="15sp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
