<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:strokeColor="@color/colorStroke"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Icon -->
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_security"
            app:tint="?attr/colorAccent"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_circle_light_accent"
            android:padding="14dp"/>

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_required"
            android:textColor="?attr/colorAccent"
            android:textSize="22sp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:letterSpacing="-0.01"
            android:layout_marginBottom="12dp"/>

        <!-- Explanation Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/permission_explanation"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="15sp"
            android:lineSpacingMultiplier="1.4"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Instruction Steps Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_rounded_blue_light"
            android:padding="20dp"
            android:layout_marginBottom="24dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOW TO ENABLE"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextBlue"
                android:layout_marginBottom="16dp"
                android:letterSpacing="0.05"/>

            <!-- Step 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="14dp">
                
                <TextView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/bg_step_circle_active"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/colorStepTextWhite"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="14dp"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap 'Grant Permission' below"
                    android:textColor="@color/colorTextInstruction"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>

            <!-- Step 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="14dp">

                <TextView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/bg_step_circle_active"
                    android:text="2"
                    android:gravity="center"
                    android:textColor="@color/colorStepTextWhite"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find 'Netspeed Lite' in the list"
                    android:textColor="@color/colorTextInstruction"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
            
            <!-- Step 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:background="@drawable/bg_step_circle_active"
                    android:text="3"
                    android:gravity="center"
                    android:textColor="@color/colorStepTextWhite"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toggle the switch ON"
                    android:textColor="@color/colorTextInstruction"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGrantPermission"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/grant_usage_permission"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="16dp"
            app:backgroundTint="?attr/colorAccent"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/not_now"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@android:color/transparent"
            app:rippleColor="?attr/colorControlHighlight"
            style="@style/Widget.MaterialComponents.Button.TextButton"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
