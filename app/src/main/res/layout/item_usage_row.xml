<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp"
    android:paddingHorizontal="8dp"
    android:gravity="center_vertical">

    <!-- Date -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:gravity="center"
        android:text="Jan 01"
        android:paddingVertical="6dp"
        android:paddingHorizontal="4dp"
        android:background="@drawable/bg_rounded_value"
        android:backgroundTint="@color/pillDateBg"
        android:textColor="@color/pillDateText"
        android:textSize="13sp"
        android:layout_marginEnd="4dp"/>

    <!-- Mobile -->
    <TextView
        android:id="@+id/tvMobile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="0 MB"
        android:paddingVertical="6dp"
        android:paddingHorizontal="4dp"
        android:background="@drawable/bg_rounded_value"
        android:backgroundTint="@color/pillMobileBg"
        android:textColor="@color/pillMobileText"
        android:textSize="13sp"
        android:layout_marginEnd="4dp"/>

    <!-- Wifi -->
    <TextView
        android:id="@+id/tvWifi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="0 MB"
        android:paddingVertical="6dp"
        android:paddingHorizontal="4dp"
        android:background="@drawable/bg_rounded_value"
        android:backgroundTint="@color/pillWifiBg"
        android:textColor="@color/pillWifiText"
        android:textSize="13sp"
        android:layout_marginEnd="4dp"/>

    <!-- Total -->
    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="0 MB"
        android:paddingVertical="6dp"
        android:paddingHorizontal="4dp"
        android:background="@drawable/bg_rounded_value"
        android:backgroundTint="@color/pillTotalBg"
        android:textColor="@color/pillTotalText"
        android:textSize="13sp"
        android:textStyle="bold" />

</LinearLayout>